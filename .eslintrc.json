{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ecmaFeatures": {
        "impliedStrict": true
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "space-in-parens": [
            "warn",
            "never"
        ],
        "space-before-function-paren": [
            "warn",
            "always"
        ],
        "eqeqeq": [
            "warn",
            "always"
        ],
        "no-var": "error",
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
